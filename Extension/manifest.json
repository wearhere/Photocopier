{
    "manifest_version": 2,

    // We need to control the key because it determines the ID of the extension
    // and we need to know that in order to give the extension access to the host.
    // This key produces ID "bbcghekamcapdonelnemkjfjfknlbkjg".
    "key": "",

    "name": "Photocopier",
    "version": "1.0",
    "description": "Copy regular images _and_ animated GIFs.",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "permissions": [
        "contextMenus",
        "nativeMessaging"
    ]
}